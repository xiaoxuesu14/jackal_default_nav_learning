<launch>

	<param name="use_sim_time" type="bool" value="true" />

  	<!--- Run move base -->
	<node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">

		<rosparam file="/home/xuesu/jackal_ws/evaluation/params/costmap_common_params.yaml" command="load" ns="global_costmap" />

		<rosparam file="/home/xuesu/jackal_ws/evaluation/params/costmap_common_params.yaml" command="load" ns="local_costmap" />

		<rosparam file="/home/xuesu/jackal_ws/evaluation/params/odom_nav_params/global_costmap_params.yaml" command="load" />

		<rosparam file="/home/xuesu/jackal_ws/evaluation/params/odom_nav_params/local_costmap_params.yaml" command="load" />

		<rosparam file="/home/xuesu/jackal_ws/evaluation/params/base_local_planner_params.yaml" command="load" />

		<rosparam file="/home/xuesu/jackal_ws/evaluation/params/move_base_params.yaml" command="load" />

		<param name="base_global_planner" type="string" value="navfn/NavfnROS" />

		<param name="base_local_planner" value="base_local_planner/TrajectoryPlannerROS"/>

		<remap from="odom" to="odometry/filtered" />

	</node>

	<node pkg="rosbag" type="play" name="player" output="screen" args="/home/xuesu/jackal_ws/evaluation/timed_move_base_inputs.bag" required = "true" />

	<node pkg="rosbag" type="record" name="recorder" output="screen" args="-O /home/xuesu/jackal_ws/evaluation/test_output.bag /cmd_vel"/>

</launch>
